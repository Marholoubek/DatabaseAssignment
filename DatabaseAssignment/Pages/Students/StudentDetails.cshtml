@page
@model StudentAccomodation.Pages.Students.StudentDetails
<h1>Student details. Student number: @Model.Student.StudentNo</h1>
<h3>Name: @Model.Student.SName</h3>
<h3>Address: @Model.Student.SAddress</h3>
<h3>Registration date: @Model.Student.RegistrationDate</h3>

<form method="Post">
    <input hidden type="number" asp-for=@Model.Student.StudentNo value=@Model.Student.StudentNo/>
    <button type="submit" class="btn btn-danger">DeleteStudent</button>
</form>

<h2>Leasings:</h2>
@{
    foreach (var leasing in Model.Leasings)
    {
        <div class="my-4">
            <h3>Leasing: @leasing.LeasingNo</h3>
            <h4>Place number: @leasing.PlaceNo</h4>
            <h4>Start date: @leasing.DateFrom</h4>
            <h4>End date: @leasing.DateTo</h4>
        </div>
    }
}
<h2>Rooms:</h2>
@{  foreach (var room in Model.Rooms)
    {
        <div class="my-4">
            <h3>Room: @room.RoomNo</h3>
            <h4>Place number: @room.PlaceNo</h4>
            @{
                if (room.DormitoryNo == null || room.DormitoryNo == 0)
                {
                    <h4>Appartment: @room.ApartmentNo</h4>
                }
                else
                {
                    <h4>Dormitory: @room.DormitoryNo</h4>
                }
            }
            <h4>Rent per semester: @room.RentPerSemester</h4>
            
        </div>
    }
    
}